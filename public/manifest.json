
{
  "manifest_version": 3,
  "name": "moodbits",
  "description": "A minimal mood calendar.",
  "version": "1.0.2",
  "icons": {
    "16": "moodbits-logo-16.png",
    "32": "moodbits-logo-32.png",
    "48": "moodbits-logo-48.png",
    "128": "moodbits-logo-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "moodbits-logo-16.png",
      "32": "moodbits-logo-32.png",
      "48": "moodbits-logo-48.png",
      "128": "moodbits-logo-128.png"
    },
    "default_title": "moodbits"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage"]
}
